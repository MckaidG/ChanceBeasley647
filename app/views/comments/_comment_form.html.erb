<div class="comment-form">
    <%= form_for @comment, url: '#'  do |f| %>
        <div class="form-group">
            <%= f.text_area :content, class: 'form-control', placeholder: 'Comment Here...' %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-sm btn btn-block' %>
        <hr>
    <% end %>
</div>
