<div class="container ">
    <div class="row">
        <div class="blog-carousel">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">

                        <%= image_tag @blog.image, width: '100%', class: 'blogs' %>
                    </div>
                    <div class="carousel-item ">

                        <%= image_tag @blog.image2, width: '100%', class: 'blogs' %>
                    </div>
                    <div class="carousel-item">

                        <%= image_tag @blog.image3, width: '100%', class: 'blogs' %>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="blog-card">
        <div class="card" >
            <div class="blog-info">
                <h1 class="blog-content"><%= @blog.title %></h1>

                <p class="blog-content"><%= @blog.body %></p>

                <% if current_user.admin %>
                    <%= link_to "Edit Item", edit_blog_path(@blog), class: 'btn btn-sm btn-warning' %>
                    <%= link_to "Delete", blog_url, method: :delete, data: { confirm: "You Sure?" }, class: 'btn btn-sm btn-warning' %>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12">

    <%= render 'comments/comment_form' %>

    <div id="comments" data-blog-id="<%= @blog.id %>">
        <br/>
        <%= render @blog.comments.order('created_at DESC') %>
    </div>
</div>
