<div class="col-sm-12 blog-main">

    <% if @blog.image? %>
        <div class="card carousel-card">
            <div class="container ">
                <div class="row">
                    <div class="blog-carousel">
                        <div id="carouselExampleControls" data-interval="false" class="carousel slide" >
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">

                                    <%= image_tag @blog.image, width: '100%', height: '60%', class: 'blogs' %>
                                </div>
                                <% if @blog.image2? %>
                                    <div class="carousel-item ">

                                        <%= image_tag @blog.image2, width: '100%', height: '60%', class: 'blogs' %>
                                    </div>
                                    <% if @blog.image3? %>
                                        <div class="carousel-item">

                                            <%= image_tag @blog.image3, width: '100%', height: '60%', class: 'blogs' %>
                                        </div>
                                    <% end %>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                <% end %>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        </div>
</div>

<div class="col-md-12 ">
    <div class="card blog-card" >

        <div class="blog-info">
            <h1 class="blog-title"><%= @blog.title %></h1>

            <hr style='background-color:white;'>
            <div class="blog-content"><%= markdown @blog.body %></div>

            <% if current_user.admin %>
                <%= link_to "Edit Item", edit_blog_path(@blog), class: 'btn btn-sm btn-warning' %>
                <%= link_to "Delete", blog_url, method: :delete, data: { confirm: "You Sure?" }, class: 'btn btn-sm btn-warning' %>

                    <%= link_to "Back", blogs_path, class: "btn btn-sm btn-warning" %>
            <% end %>
        </div>
    </div>
</div>
<%= render 'shared/blog_comments' %>
<%= render 'shared/footer' %>

